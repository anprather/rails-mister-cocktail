<div class="cocktails-list">

  <% @cocktails.each do |cocktail| %>
    <div class="cocktail">
      <div class="image-cocktail">
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 200, width: 200, crop: :fill %>
      <% else %>
        <img src="https://source.unsplash.com/200x<%= rand(200..400) %>/?cocktail,drink" alt="">
      <% end %>
      </div>
      <div class="cocktail-info">
        <p><%= link_to cocktail.name, cocktail_path(cocktail.id) %> â€¢ delete? </p>
        <p><%= link_to cocktail_path(cocktail.id), method: :delete, data: {confirm: "Are you sure?"} do %>
          <i class="far fa-trash-alt pl-2" style="font-size: 14px"></i>
          <% end %></p>
      </div>
    </div>
  <% end %>
</div>
